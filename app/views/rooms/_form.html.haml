= form_for(@room) do |f|
  - if @room.errors.any?
    #error_explanation
      %h2
        = pluralize(@room.errors.count, "error")
        prohibited this room from being saved:
      %ul
        - @room.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :roomnumber
    %br/
    = f.text_field :roomnumber
  .field
    = f.label :roomtype
    %br/
    = f.text_area :roomtype
  .field
    = f.label :roomdescription
    %br/
    = f.text_area :roomdescription
  .field
    = f.label :hotelname
    %br/
    = f.text_field :hotelname
  .actions
    = f.submit