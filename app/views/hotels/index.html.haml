%banner2
  Listing of Hotels
%p#notice= notice
%table.table.table-bordered.table-striped.table-hover
  %thead
    %tr
      %th Number
      %th Hotel Name
      %th Address
      %th Website
      %th Phone
      %th Select Option
  %tbody
    - @hotels.each_with_index do |hotel, index|
      %tr
        %td= (index+1)
        %td= hotel.hotelname
        %td= hotel.address
        %td= hotel.website
        %td= hotel.phone
        %td
          .dropdown
            %a#dLabel{"aria-expanded" => "false", "aria-haspopup" => "true", "data-target" => "#", "data-toggle" => "dropdown", :href => "http://example.com"}
              Action
              %span.caret
            %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
              %li= link_to 'Show', hotel
              %li= link_to 'Edit', edit_hotel_path(hotel)
              %li= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' }
              %li= link_to 'Add Room', new_hotel_room_path(hotel)
%br/
= link_to 'New Hotel', new_hotel_path
|
= link_to 'Home Page', root_path
