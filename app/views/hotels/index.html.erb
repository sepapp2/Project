<h1>Listing of Hotels</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Hotel Name</th>
      <th>Address</th>
      <th>Website</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.hotelname %></td>
        <td><%= hotel.address %></td>
        <td><%= hotel.website %></td>
        <td><%= hotel.phone %></td>
        <td>
        	<div class="dropdown">
  				<a id="dLabel" data-target="#" href="http://example.com" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    				Actions
    				<span class="caret"></span>
  				</a>

  				<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
  					  <li><%= link_to 'Show', hotel %></li>
  					  <li><%= link_to 'Edit', edit_hotel_path(hotel) %></li>
  					  <li><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></li>
 				 </ul>
			</div>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hotel', new_hotel_path %>
